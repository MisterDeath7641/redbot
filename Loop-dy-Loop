#include <RedBot.h>

RedBotMotors motors;

void setup() {

delay(2500);        // for 2500 ms.
motors.rightMotor(-140); // Turn CCW at motorPower of 100                                                    \\turns foward
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(2700);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms.
 
}
void loop() {
{
   for (int i=0; i <= 255; i++){
      
   
  // put your main code here, to run repeatedly:

 motors.rightMotor(-145); // Turn CCW at motorPower of 100                                                    \\turns right
 motors.leftMotor(-150);  // Turn CCW at motorPower of 100
 delay(570);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms.

