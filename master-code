#include <RedBot.h>

RedBotMotors motors;




void setup() {
 
  delay (3000);
  
 motors.rightMotor(-150); //                                                                                 \\foward
 motors.leftMotor(-150); // 
 delay(1000);       // for 1000 ms.
 motors.brake();    // brake() motors

 
 motors.rightMotor(50); // Turn CCW at motorPower of 100                                                    \\turns left
 motors.leftMotor(-50);  // Turn CCW at motorPower of 100
 delay(500);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(500);        // for 500 ms.    


  motors.rightMotor(-150); // Turn on right motor clockwise medium power (motorPower = 150)                         \\foward
  motors.leftMotor(-150); // Turn on left motor counter clockwise medium power (motorPower = 150)
  delay(1000);       // for 1000 ms.
  motors.brake();     // brake() motors

  motors.rightMotor(-50); // Turn CCW at motorPower of 50                                             \\Turns right
  motors.leftMotor(50);  // Turn CCW at motorPower of 50
  delay(500);        // for 500 ms.    
  motors.brake();    // brake() motors
  delay(500);        // for 500 ms.    

  motors.rightMotor(100); // Turn CCW at motorPower of 100                                              \\foward
  motors.leftMotor(100);  // Turn CCW at motorPower of 100
  delay(500);        // for 500 ms.    
  motors.brake();    // brake() motors
  delay(500);        // for 500 ms.    
  
    motors.rightMotor(-50); // Turn CCW at motorPower of 100                                            //right
  motors.leftMotor(50);  // Turn CCW at motorPower of 100
  delay(500);        // for 500 ms.    
  motors.brake();    // brake() motors
  delay(500);        // for 500 ms.    

  motors.rightMotor(100); // Turn CCW at motorPower of 100                                              \\foward
  motors.leftMotor(-50);  // Turn CCW at motorPower of 100
  delay(500);        // for 500 ms.    
  motors.brake();    // brake() motors
  delay(500);        // for 500 ms.    

    motors.rightMotor(100); // Turn CCW at motorPower of 100                                         \\turn right
  motors.leftMotor(-50);  // Turn CCW at motorPower of 100
  delay(500);        // for 500 ms.    
  motors.brake();    // brake() motors
  delay(500);        // for 500 ms. 

       motors.rightMotor(100); // Turn CCW at motorPower of 100                                       \\foward
  motors.leftMotor(-50);  // Turn CCW at motorPower of 100
  delay(500);        // for 500 ms.    
  motors.brake();    // brake() motors
  delay(500);        // for 500 ms.    
  
}
void loop() {
  // put your main code here, to run repeatedly:

}
