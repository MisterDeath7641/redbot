#include <RedBot.h>

RedBotMotors motors;

void setup() {
 
  delay (3000);
 
motors.rightMotor(-147); // Turn CCW at motorPower of 100                                                    \\turns foward
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(2700);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms.    

motors.rightMotor(-150); // Turn CCW at motorPower of 100                                                    \\turns left
 motors.leftMotor(-145);  // Turn CCW at motorPower of 100
 delay(400);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms. 

motors.rightMotor(-145); // Turn CCW at motorPower of 100                                                    \\turns foward
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(800);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms.

    motors.rightMotor(145); // Turn CCW at motorPower of 100                                                    \\turns right
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(440);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms. 

 
motors.rightMotor(-148); // Turn CCW at motorPower of 100                                                       \\turns foward
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(2500);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms.    

 motors.rightMotor(145); // Turn CCW at motorPower of 100                                                    \\turns right
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(400);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms. 


motors.rightMotor(-145); // Turn CCW at motorPower of 100                                                    \\turns foward
 motors.leftMotor(145);  // Turn CCW at motorPower of 100
 delay(1000);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms.

  motors.rightMotor(145); // Turn CCW at motorPower of 100                                                    \\turns right
 motors.leftMotor(150);  // Turn CCW at motorPower of 100
 delay(400);        // for 500 ms.    
 motors.brake();    // brake() motors
 delay(1500);        // for 500 ms. 


}
void loop() {
  // put your main code here, to run repeatedly:

}
